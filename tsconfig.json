{
	"compilerOptions": {
		"target": "esnext", // Let Babel deal with transpiling new language features
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react",
		"noEmit": true,
		"declaration": true,
		"allowJs": true,
		"removeComments": false,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"baseUrl": "."
	}
}
